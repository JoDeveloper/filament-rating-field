{
    "name": "jodeveloper/filament-rating",
    "description": "The rating field with icons and colors for the Filament forms",
    "keywords": [
        "jodeveloper",
        "laravel",
        "filament-rating",
        "rating",
        "icons",
        "colors"
    ],
    "homepage": "https://github.com/jodeveloper/filament-rating",
    "license": "MIT",
    "authors": [
        {
            "name": "JoDeveloper",
            "email": "info@jodeveloper.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "filament/forms": "^2.0|^3.0|^4.0",
        "illuminate/contracts": "^8.6|^9.0|^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Jodeveloper\\FilamentRating\\": "src",
            "Jodeveloper\\FilamentRating\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jodeveloper\\FilamentRating\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jodeveloper\\FilamentRating\\FilamentRatingServiceProvider"
            ],
            "aliases": {
                "FilamentRating": "Jodeveloper\\FilamentRating\\Facades\\FilamentRating"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
